
<% if (typeof success !== 'undefined' && success) { %>
  <div class="wallet-success"><%= success %></div>
<% } %>

<% if (typeof error !== 'undefined' && error) { %>
  <div class="wallet-error"><%= error %></div>
<% } %>

<p><strong>Saldo:</strong> <%= wallet.balance %> kr</p>

